pipeline {
    agent {
        docker {
            image 'amazonlinux:2'  // Use Amazon Linux 2 as the Docker image
            args '-u root'         // Run as root user
        }
    }
    stages {
        stage('Install AWS CLI and kubectl') {
            steps {
                script {
                    // Update the package manager and install AWS CLI and kubectl
                    sh '''
                    set -e  # Exit immediately if a command exits with a non-zero status
                    yum update -y
                    yum install -y aws-cli

                    # Install kubectl version 1.30
                    curl -LO "https://dl.k8s.io/release/v1.30.0/bin/linux/amd64/kubectl"
                    chmod +x ./kubectl
                    mv ./kubectl /usr/local/bin/kubectl
                    '''
                }
            }
        }
        stage('Verify Installations') {
            steps {
                script {
                    // Run commands to verify installations
                    sh 'aws --version'
                    sh 'kubectl version --client'
                }
            }
        }
        stage('Configure AWS Credentials') {
            steps {
                script {
                    // Use the withCredentials block to access AWS credentials
                    withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-cred']]) {
                        // Set AWS environment variables automatically
                        sh '''
                        export AWS_DEFAULT_REGION=ap-southeast-2  # Change to your desired region
                        aws eks update-kubeconfig --name stg-eks --region $AWS_DEFAULT_REGION
                        '''
                        
                        // Check the kubeconfig file and update the apiVersion if necessary
                        if (fileExists("$HOME/.kube/config")) {
                            sed -i 's/apiVersion: client.authentication.k8s.io/v1alpha1/apiVersion: client.authentication.k8s.io\\/v1beta1/g' "$HOME/.kube/config" || true
                            sed -i 's/apiVersion: client.authentication.k8s.io/v1beta1/apiVersion: client.authentication.k8s.io\\/v1beta1/g' "$HOME/.kube/config" || true
                        fi
                        
                        // Optionally, you can run a kubectl command to verify the connection
                        sh 'kubectl get nodes'
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
