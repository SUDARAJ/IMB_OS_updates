pipeline {
    agent {
        docker {
            image 'redhat/ubi8:latest'  // Use Red Hat Universal Base Image 8 as the Docker image
            args '-u root'         // Run as root user
        }
    }

    stages {
        stage('Check User Information') {
            steps {
                sh '''
                pwd
                whoami
                '''
            }
        }

        stage('Install Prerequisites') {
            steps {
                sh '''
                yum install -y curl unzip
                '''
            }
        }

        stage('Install AWS CLI') {
            steps {
                // Install AWS CLI as root
                sh 'curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"'
                sh 'unzip awscliv2.zip'
                sh './aws/install'
            }
        }

        stage('Verify AWS CLI Installation') {
            steps {
                sh 'aws --version'  // Check AWS CLI version to verify installation
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}

