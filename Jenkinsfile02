pipeline {
    agent {
        docker {
            image 'redhat/ubi8:latest'  // Use Red Hat Universal Base Image 8 as the Docker image
            args '-u root'         // Run as root user
        }
    }

    stages {
        stage('Check User Information') {
            steps {
                sh '''
                pwd
                whoami
                '''
            }
        }

        stage('Install AWS CLI') {
            steps {
                sh '''
                yum install -y unzip
                curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
                unzip awscliv2.zip
                ./aws/install
                aws --version
                '''
            }
        }
        
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}

