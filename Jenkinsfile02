pipeline {
    agent {
        docker {
            image 'amazonlinux:2'  // Use Amazon Linux 2 as the Docker image
            args '-u root'         // Run as root user
        }
    }
    stages {
        stage('Install AWS CLI') {
            steps {
                script {
                    // Update the package manager and install AWS CLI
                    sh '''
                    yum update -y
                    yum install -y aws-cli
                    '''
                }
            }
        }
        stage('Verify AWS CLI Installation') {
            steps {
                script {
                    // Run a command to verify AWS CLI installation
                    sh 'aws --version'
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
