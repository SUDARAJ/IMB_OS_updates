pipeline {
    agent {
        docker {
            image 'amazonlinux:2'  // Use Amazon Linux 2 as the Docker image
            args '-u root'         // Run as root user
        }
    }
    stages {
        stage('Install Packages') {
            steps {
                script {
                    // Update the package manager and install some packages
                    sh '''
                    yum update -y
                    yum install -y git curl
                    '''
                }
            }
        }
        stage('Run Command') {
            steps {
                script {
                    // Run a simple command to verify installation
                    sh 'git --version'
                    sh 'curl --version'
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
