pipeline {
    agent {
        docker 'docker:latest' // Use the latest Docker image
    }
    stages {
        stage('Install AWS CLI') {
            steps {
                script {
                    // Install the AWS CLI in the Docker container
                    echo 'Installing AWS CLI'
                    sh 'apk add --no-cache python3 py3-pip'  // Install Python3 and pip
                    sh 'pip3 install awscli --upgrade --user' // Install the AWS CLI using pip
                    sh 'aws --version'  // Verify AWS CLI installation
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    // Build commands go here
                    echo 'Building application'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    // Test commands go here
                    echo 'Running tests'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Deployment commands go here
                    echo 'Deploying application'
                }
            }
        }
    }
    post {
        always {
            echo 'Cleaning up...'
        }
    }
}

