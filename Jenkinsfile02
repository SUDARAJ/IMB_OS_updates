pipeline {
    agent {
        docker 'docker:latest' // Use the latest Docker image
    }
    stages {
        stage('Run Commands as Root') {
            steps {
                script {
                    // Change to root user and verify
                    echo 'Switching to root user'
                    sh 'whoami'  // This should print "root"
                    
                    // Example: Running a Docker command as root
                    echo 'Running Docker version command'
                    sh 'docker --version'
                }
            }
        }
    }
    post {
        always {
            echo 'Cleaning up...'
        }
    }
}
   }
}

